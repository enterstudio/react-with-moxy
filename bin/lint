#!/usr/bin/env node

'use strict';

const yargs = require('yargs');
const planify = require('planify');
const eslint = require('eslint');
const stylelint = require('stylelint');
const spawn = require('child_process').spawn;

// ---------------------------------------------------------
// CLI definition
// ---------------------------------------------------------

const argv = yargs
.strict()
.wrap(Math.min(120, yargs.terminalWidth()))
.help('help').alias('help', 'h')
.usage('Usage: ./$0 [options]')
.demand(0, 0)
.option('lint-output', {
    alias: 'l',
    type: 'boolean',
    describe: 'Show the lint output',
    default: true,
})
.option('reporter', {
    alias: ['r', 'R'],
    type: 'string',
    describe: 'Any of the planify\'s reporters',
})
.argv;

if (argv.help) {
    yargs.showHelp('log');
    process.exit(0);
}

// ---------------------------------------------------------
// Functions
// ---------------------------------------------------------

function runEslint(files) {
    const CLIEngine = eslint.CLIEngine;
    const cli = new CLIEngine({
        fix: true,
    });
    const report = cli.executeOnFiles(files);

    // output fixes to disk
    CLIEngine.outputFixes(report);

    if (argv.lintOutput) {
        const formatter = cli.getFormatter();
        const output = formatter(report.results).trim();

        output && process.stdout.write(`${output}\n`);
    }

    if (report.errorCount) {
        throw new Error(`eslint reported ${report.errorCount} error(s)`);
    }
}

function runStylelint(files) {
    return stylelint.lint({
        files,
        formatter: 'string',
    })
    .then((result) => {
        const output = result.output.trim();

        if (argv.lintOutput) {
            output && process.stdout.write(`${output}\n\n`);
        }

        if (result.errored) {
            throw new Error('stylelint result contains errors');
        }
    });
}

function getFileExtension(filename) {
    return (/[.]/.exec(filename)) ? /[^.]+$/.exec(filename)[0] : undefined;
}

function getStagedFiles(callback) {
    const cmd = spawn('git', ['status', '--porcelain', 'src', 'config']);

    cmd.stdout.on('data', (data) => {
        const files = `${data}`.split('\n');
        let jsFiles = [];
        let cssFiles = [];

        files.forEach((fileTmp) => {
            const file = fileTmp.substring(3, fileTmp.length);
            const fileExtension = getFileExtension(file);

            switch (fileExtension) {
            case 'js':
                jsFiles = [...jsFiles, file];
                break;

            case 'css':
                cssFiles = [...cssFiles, file];
                break;

            default:
                break;
            }
        });

        callback({ jsFiles, cssFiles });
    });
}

// ---------------------------------------------------------
// Steps
// ---------------------------------------------------------

planify({ exit: true, reporter: argv.reporter })
.step('Init Linting Process', (data, done) => {
    console.log('Getting staged files..');
    getStagedFiles((files) => { data.files = files; });
    setTimeout(done, 500);
})
.step('Running es-lint', (data) => {
    if (Object.keys(data).length !== 0) {
        const { jsFiles } = data.files;

        jsFiles.length && runEslint(jsFiles);
    }
})
.step('Running stylelint', (data, done) => {
    if (Object.keys(data).length !== 0) {
        const { cssFiles } = data.files;

        cssFiles.length && runStylelint(cssFiles);
        setTimeout(done, 500);
    }
})
.run();
